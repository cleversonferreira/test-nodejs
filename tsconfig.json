{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                             
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,           
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*ts"
  ]
}